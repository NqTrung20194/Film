<h2 class="tm-text-primary">Sửa Danh mục sản phẩm</h2>
        <hr class="mb-5">
<div class="col-md-12">
    <div class="container">
      <form  id="formCategories" method="post">
        <div class="form-group">
          <label for="name">Tên</label>
          <input type="name" class="form-control" id="name"  name="name" value="<%=data.name%>">
        </div>

       
          <input type="text"  id="id" hidden name="id" value="<%=data.id%>">
        

        <div class="form-group">
          <label for="parents">Chọn cha</label>
          <select id="parents" class="form-control">
            <option value="">Chọn</option>
            <%-parents%>
          </select>
        </div>
    
        <div class="form-group">
          <label for="noidung">Nội Dung</label>
          <textarea class="form-control" id="content"  name="noidung" ><%=data.content%>
        </textarea>
          </div>
    
        <div class="checkbox">
          <label><input type="checkbox" name="remember"> Remember me</label>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
    </div>
    <script>
      $(document).ready(function(){
      $('#formCategories').on('submit', function(e){
          // tắt load form
          e.preventDefault();
        var name, parents, content, flag=1,id;
        var id =$('#id').val();
        name = $('#name').val();
        parents = $('#parents').String();
        content = CKEDITOR.instances['content'].getData();
        //alert(id);
        if(flag==1)
            {
                // gửi ajax
                $.ajax({
                    // link
                    url: 'categories/edit',
                    // method
                    type: 'POST',
                    // dữ liệu
                    data: {
                        'name': name,
                        'parents': parents,
                        'content': content,
                        'id':id
                    },
                    // kết quả trả về từ server
                    success: function(result){
                        console.log(result);
                    }
                });
                return false;
            }
        });
      });
    </script>
    
    